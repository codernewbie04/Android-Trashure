<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_gray">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:background="@color/white"
        app:title="Akun"
        android:layout_height="70dp"
        app:titleTextColor="@color/blue_dark" />
    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scroll1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">
            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:translationY="30dp"
                android:elevation="1dp"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/foto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/image_placeholder" />

            </RelativeLayout>
            <LinearLayout
                android:translationY="-10dp"
                android:elevation="0dp"
                android:layout_marginBottom="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/bg_card"
                android:orientation="vertical"
                android:padding="14dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="35dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/txt_nama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_semibold"
                        android:text="{Nama Lengkap}"
                        android:textColor="@color/blue_dark"
                        android:textSize="18dp" />

                    <ImageView
                        android:id="@+id/edit_profile"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_pen"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="35dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/bg_card_gray"
                    android:paddingBottom="26dp"
                    android:layout_marginBottom="25dp">
                    <LinearLayout
                        android:layout_marginTop="18dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:src="@drawable/ic_level" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Level"
                            android:textColor="@color/blue_dark"
                            android:fontFamily="@font/sf_pro_regular"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txt_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="{Level User}"
                            android:textColor="@color/blue_dark"
                            android:fontFamily="@font/sf_pro_semibold"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="18dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:src="@drawable/ic_penukaran"
                            app:tint="@color/greenPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Saldo"
                            android:textColor="@color/blue_dark"
                            android:fontFamily="@font/sf_pro_regular"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txt_saldo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="{Saldo User}"
                            android:textColor="@color/blue_dark"
                            android:fontFamily="@font/sf_pro_semibold"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="18dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:src="@drawable/ic_trash" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Total"
                            android:textColor="@color/blue_dark"
                            android:fontFamily="@font/sf_pro_regular"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txt_berat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="{Total Sampah}"
                            android:textColor="@color/blue_dark"
                            android:fontFamily="@font/sf_pro_semibold"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="26dp">
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Nomor Hp"
                            android:textColor="@color/gray"
                            android:fontFamily="@font/sf_pro_regular"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txt_nohp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/sf_pro_regular"
                            android:text="{Nohp User}"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Email"
                            android:textColor="@color/gray"
                            android:fontFamily="@font/sf_pro_regular"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txt_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="{Email User}"
                            android:textColor="@color/black"
                            android:fontFamily="@font/sf_pro_regular"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Register Date"
                            android:textColor="@color/gray"
                            android:fontFamily="@font/sf_pro_regular"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="22 - Oktober - 2020"
                            android:textColor="@color/black"
                            android:fontFamily="@font/sf_pro_regular"
                            android:textSize="12sp" />

                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_keluar"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_green"
                    android:backgroundTint="#FF5722"
                    android:fontFamily="@font/sf_pro_semibold"
                    android:text="Keluar"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="16sp" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>